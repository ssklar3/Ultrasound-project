% READ THE AVI
v=VideoReader('Vid1.avi');
numFrames = ceil(v.FrameRate*v.Duration);
mat=zeros(345,354)
while hasFrame(v)
    vidFrame = readFrame(v);
    imshow(vidFrame)
    I = rgb2gray(vidFrame);
    imshow( I );
    mat=im2double(I);
end

